bind main <C-b> !git branch -a --contains %(commit)
set ignore_case = smart-case
bind main <C-f> :goto
set show-untracked = false
#set commit-order = default

set log-options = --show-signature
set diff-options = --show-signature
bind diff 7 !git diff %(commit)^ %(commit)
#bind generic d >sh -c "DELTA_PAGER='less -RKc' git show %(commit)"
bind diff d >sh -c "git show %(commit) | delta --paging always --side-by-side --line-numbers"
bind diff D >sh -c "git show %(commit) | delta --paging always --side-by-side --line-numbers"
#bind main <F4> !git difftool -t difftastic -d %(commit)^!
#bind diff D :toggle word-diff

bind generic + !git commit --amend

color "---"			magenta	default
color "index "			magenta	default
color "diff-tree "		magenta	default
color "Merge: "			magenta	default
color "parent "			magenta	default
color "tree "			magenta	default
color date			magenta	default
color grep.file			magenta	default
color title-blur		white	magenta
color title-focus		white	magenta	bold
color help-group		magenta	default
color diff-stat			magenta	default
color graph-commit		magenta	default
