{{ if .install_packages -}}

#!/usr/bin/env zsh

# Temporarily add mise shims to PATH so that we can run `ya` command and other mise tools in
# this session.
export PATH="$HOME/.local/share/mise/shims:$PATH"

{{ if ne .osid "windows" -}}
# Install onedark theme for yazi
ya pkg add BennyOe/onedark || true

# Install compress plugin
ya pkg add KKV9/compress || true

{{ if .install_nvim -}}
# install bob neovim manager
mise use -g bob
bob use stable
{{ end -}}

{{ end -}}

# end of install_packages
{{ end -}}
